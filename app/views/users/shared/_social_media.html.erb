<%- if devise_mapping.omniauthable? %>
<div class="row omb_row-sm-offset-3 omb_socialButtons">
<%- resource_class.omniauth_providers.each do |provider| %>
    <div class="col-xs-4 col-sm-2">
        <% provider_name = provider.downcase.to_s == "google_oauth2" ? "google" : provider.downcase  %>
        <%= link_to omniauth_authorize_path(resource_name, provider), 
                    method: :post, class: "btn btn-lg btn-block omb_btn-#{provider_name}" do %>
        <i class="fa fa-<%= provider_name %> visible-xs"></i>
        <span class="hidden-xs"><%= provider_name.capitalize %></span>
        <% end %>
        <br />
    </a>
    </div>
<% end %>
</div>
<% end %>